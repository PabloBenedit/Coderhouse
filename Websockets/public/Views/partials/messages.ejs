<div class="chat_window">
  <h1 class="title">Contactate con nosotros!</h1>
  <div class="bottom_wrapper clearfix">
      <div class="messages" id="messages"></div>
      <form action="/message" method="post" onsubmit="return addMessage(this)" class="form">          
          <div class="message-bar">
            <input class="message_input" id="username" type="text" placeholder="Ingrese su email" required/>
            <input class="message_input" id="texto" placeholder="Ingrese mensaje" />        
            <input class="text form-btn" type="submit" value="Enviar mensaje"> 
          </div>
      </form>
  </div>
</div>