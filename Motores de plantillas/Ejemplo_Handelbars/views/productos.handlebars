
<h2 style="color:black" > Listado de productos </h2>
    {{#if productos}}

    <table class="table table-striped table-hover">
        <thead>
            <tr >
                <th style="color:Tomato">Nombre</th>
                <th style="color:Tomato">Precio</th>
                <th style="color:Tomato">Foto</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr >
                <td class="align-middle" style="color:black" >{{this.name}}</td>
                <td class="align-middle" style="color:black">{{this.price}}</td>
                <td class="align-center" style="color:black"><img src="{{this.picture}}" alt="{{this.name}}" width="100px">
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h2 class="bg-light p-4 text-danger"> No se han cargado productos </h2>
    {{/if}}
    <div class="mt-3">
        <a href="./productos">
            <button class="btn btn-warning"> Agregar nuevo producto </button>
        </a>
    </div>